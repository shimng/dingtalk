<% layout("layout") %>
<div class="am-panel am-panel-secondary am-margin-sm" ng-controller="HomeCtrl" ng-init="load()">
    <div class="am-panel-hd">水果件</div>
    <div class="am-panel-bd">
        <form style=";left:0;width: 100%;z-index: 700;background-color: #fff;" class="am-form am-form-inline  am-padding-sm" action="" method="post">
            <!--<input type="text" name="ptags" value="{$ptags}" hidden>-->
            <div class="am-form-group am-form-icon" style="margin-bottom: 0;">
                <i class="am-icon-search " style="color: #a1a1a1;"></i>
                <input type="text" class="am-form-field am-round" style="background-color: #fff;opacity: 0.9; width: 100%;" placeholder="输入至少6位订单号" name="search">
            </div>
        </form>
        <ul class="am-avg-sm-2">
            <li class="am-padding-sm">
                <button type="button" class="am-btn am-btn-danger am-radius am-btn-block" ng-click="scan()">扫码领单</button>
            </li>
            <li class="am-padding-sm">
                <button type="button" class="am-btn am-btn-secondary am-radius am-btn-block">扫码查单</button>
            </li>
        </ul>
    </div>
</div>

<script type="text/javascript" src="http://g.alicdn.com/ilw/ding/0.9.2/scripts/dingtalk.js"></script>
<script >
    var corpId = '<%=dd_config.corpId%>' ;
    var timeStamp = '<%=dd_config.timeStamp%>' ;
    var nonceStr = '<%=dd_config.nonceStr%>' ;
    var signature = '<%=dd_config.signature%>' ;
    var agentId = '<%=dd_config.agentId%>' ;

    dd.config({
        agentId: agentId,
        corpId:corpId,
        timeStamp:  timeStamp,
        nonceStr: nonceStr,
        signature:  signature,
        jsApiList: [
            'biz.util.scan']
    });
    dd.ready(function () {
        dd.error(function(err) {
            alert('dd error: ' + JSON.stringify(err));
        });
    })
    dd.error(function(err) {
        alert('dd error: ' + JSON.stringify(err));
    });
</script>
